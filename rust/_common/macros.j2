    {% if ns %}{{ ns }}::{% endif %}{{ self::model_name(name = property.model.type) }}
{% elif property.type == "wrapper" and property.model %}
    {% if ns %}{{ ns }}::{% endif %}{{ self::model_name(name = property.model.name) }}
